<h1>  Edit a Post </h1>

<!-- Check if the instance of post we are attempting to create has any validation errors. -->
<% if @post.errors.full_messages.length > 0 %>
  <!-- Iterate through the full messages of each error attached to the instance of post and create a li for each one with the value of the error message injected into it. -->
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%=  form_for @post do |f| %>

<p>
<%= f.label :title %> <br>
<%= f.text_field :title %> <br> </p>


<!-- Users should be able to select a blogger from a dropdown menu -->
<p>
<%= f.label :blogger %> <br>
<%= f.collection_select( :blogger_id, Blogger.all, :id, :name) %> <p>

<!-- Users should be able to select a destination from a dropdown menu -->
<p>
<%= f.label :destination %> <br>
<%= f.collection_select( :destination_id, Destination.all, :id, :name) %> <p>

<p>
<%= f.label :content %> <br>
<%= f.text_area :content %> <p>

<%= f.submit "Submit post" %>
<% end %>
